{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "incremental": true,
    "resolveJsonModule": true,
    "lib": ["ES2020.String", "dom"]
  }
}
